@page
@model CaloriesCounter.Web.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Відновлення паролю";
}
<div class="container">
    <h2>Відновлення паролю</h2>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email">Електронна пошта</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Надіслати посилання</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}