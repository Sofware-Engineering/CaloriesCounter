@page
@model CaloriesCounter.Web.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Скидання пароля";
}

<div class="container mt-4">
    <h2 class="mb-3">Скидання пароля</h2>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Код скидання (приховане поле) -->
        <input type="hidden" asp-for="Input.Code" />

        <!-- Електронна пошта -->
        <div class="form-group mb-3">
            <label asp-for="Input.Email" class="form-label">Електронна пошта</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Новий пароль -->
        <div class="form-group mb-3">
            <label asp-for="Input.Password" class="form-label">Новий пароль</label>
            <input asp-for="Input.Password" class="form-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <!-- Підтвердження пароля -->
        <div class="form-group mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label">Підтвердження пароля</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Кнопка підтвердження -->
        <button type="submit" class="btn btn-primary">Скинути пароль</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
