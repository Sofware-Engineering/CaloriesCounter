@model UserProfile
@using CaloriesCounter.Core.Models

<div class="container">
    <h2>Калькулятор калорій</h2>
    <form asp-action="Calculate" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Age">Вік</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender">Стать</label>
            <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Weight">Вага (кг)</label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Height">Зріст (см)</label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ActivityLevel">Рівень активності</label>
            <select asp-for="ActivityLevel" class="form-control" asp-items="Html.GetEnumSelectList<ActivityLevel>()"></select>
            <span asp-validation-for="ActivityLevel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Goal">Мета</label>
            <select asp-for="Goal" class="form-control" asp-items="Html.GetEnumSelectList<Goal>()"></select>
            <span asp-validation-for="Goal" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Розрахувати</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}